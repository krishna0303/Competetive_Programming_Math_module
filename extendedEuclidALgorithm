

#include <bits/stdc++.h>

using namespace std;
struct euclid{
    int g,x,y;
};

euclid extendedEculid(int a,int b){
    if(b==0){
        euclid ans;
        ans.g=a;
        ans.x=1;
        ans.y=0;
        return ans;
    }else{
        euclid smallans=extendedEculid(b,a%b);
        euclid ans;
        ans.x=smallans.y;
        ans.g=smallans.g;
        ans.y=smallans.x-(a/b)*smallans.y;
        return ans;
    
    }
}


int main()
{
    int a,b;
    cin>>a>>b;
    euclid ans=extendedEculid(a,b);
    cout<<ans.g<<endl;
    cout<<ans.x<<" "<<ans.y<<endl;
    return 0;
}
